<!--the fxml file for the gameplay screeen-->
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controllers.gameplayController"
            stylesheets="@lightTheme.css">
    <!-- Top Menu Bar -->
    <top>
        <MenuBar>
            <Menu text="Options">
                <MenuItem text="Exit" onAction="#handleExit"/>
                <MenuItem text="Fresh Start" onAction="#handleFreshStart"/>
                <MenuItem text="New Look" onAction="#handleNewLook"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Center Game Area -->
    <center>
        <GridPane hgap="20" vgap="20" alignment="CENTER">
            <!-- Dealer Area -->
            <VBox GridPane.columnSpan="3" alignment="CENTER">
                <Label text="Dealer's Hand" styleClass="section-label"/>
                <HBox spacing="10" fx:id="dealerHandPane">
                    <!-- Dealer cards will be added here dynamically -->
                </HBox>
            </VBox>

            <!-- Player One Area -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER">
                <Label text="Player One" styleClass="section-label"/>
                <HBox spacing="10" fx:id="playerOneHandPane">
                    <!-- Player One's cards -->
                </HBox>
                <!-- Betting Controls -->
                <HBox spacing="10">
                    <Label text="Ante Bet:"/>
                    <TextField fx:id="playerOneAnteBet" promptText="$5 - $25"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Pair Plus Bet:"/>
                    <TextField fx:id="playerOnePairPlusBet" promptText="$5 - $25"/>
                </HBox>
                <Button text="Place Bets" onAction="#handlePlaceBetsPlayerOne"/>
                <Label text="Total Winnings:"/>
                <Label fx:id="playerOneWinnings" text="$0"/>
            </VBox>

            <!-- Game Info Area -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="CENTER">
                <Label text="Game Information" styleClass="section-label"/>
                <TextArea fx:id="gameInfoArea" prefRowCount="10" prefColumnCount="20" editable="false"/>
            </VBox>

            <!-- Player Two Area -->
            <VBox GridPane.rowIndex="1" GridPane.columnIndex="2" alignment="CENTER">
                <Label text="Player Two" styleClass="section-label"/>
                <HBox spacing="10" fx:id="playerTwoHandPane">
                    <!-- Player Two's cards -->
                </HBox>
                <!-- Betting Controls -->
                <HBox spacing="10">
                    <Label text="Ante Bet:"/>
                    <TextField fx:id="playerTwoAnteBet" promptText="$5 - $25"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Pair Plus Bet:"/>
                    <TextField fx:id="playerTwoPairPlusBet" promptText="$5 - $25"/>
                </HBox>
                <Button text="Place Bets" onAction="#handlePlaceBetsPlayerTwo"/>
                <Label text="Total Winnings:"/>
                <Label fx:id="playerTwoWinnings" text="$0"/>
            </VBox>
        </GridPane>
    </center>

    <!-- Bottom Control Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" padding="10">
            <Button text="Deal Cards" onAction="#handleDealCards"/>
            <Button text="Play/Fold" onAction="#handlePlayOrFold"/>
            <Button text="Continue" onAction="#handleContinue"/>
        </HBox>
    </bottom>
</BorderPane>
