<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gameplayController"  fx:id="root" stylesheets="@/styles/lightTheme.css">

    <!-- Top Menu Bar -->
    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="Options">
                <MenuItem text="Fresh Start" onAction="#handleFreshStart"/>
                <MenuItem text="New Look" onAction="#handleNewLook"/>
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
        </MenuBar>
    </top>


    <!-- Center Gameplay Area -->
    <center>
        <VBox alignment="CENTER" spacing="20" padding="20">
            <!-- Game Title -->
            <Label text="Three Card Poker" styleClass="gameplay-title"/>

            <!-- Dealer's Area -->
            <Label text="Dealer's Hand" styleClass="section-title"/>
            <HBox fx:id="dealerHandPane" alignment="CENTER" spacing="10" styleClass="card-pane">
                <!-- Cards will be added dynamically -->
            </HBox>

            <!-- Divider -->
            <Separator orientation="HORIZONTAL" prefWidth="800"/>

            <!-- Players' Areas -->
            <HBox alignment="CENTER" spacing="50">
                <!-- Player One's Area -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Player One" styleClass="player-title"/>
                    <HBox fx:id="playerOneHandPane" alignment="CENTER" spacing="10" styleClass="card-pane">
                        <!-- Cards will be added dynamically -->
                    </HBox>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Ante Bet:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="playerOneAnteBet" promptText="$5 - $25" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Pair Plus Bet:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="playerOnePairPlusBet" promptText="$5 - $25" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Total Winnings:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="playerOneWinnings" text="$0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>
                    <Button fx:id="placeBetsButtonPlayerOne" text="Place Bets" onAction="#handlePlaceBetsPlayerOne" minWidth="150"/>
                    <Button fx:id="playFoldButtonPlayerOne" text="Play / Fold" onAction="#handlePlayOrFoldPlayerOne" minWidth="150"/>
                </VBox>

                <!-- Game Information Area -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Game Information" styleClass="section-title"/>
                    <TextArea fx:id="gameInfoArea" editable="false" wrapText="true" prefWidth="350" prefHeight="300" styleClass="text-area"/>
                </VBox>

                <!-- Player Two's Area -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Player Two" styleClass="player-title"/>
                    <HBox fx:id="playerTwoHandPane" alignment="CENTER" spacing="10" styleClass="card-pane">
                        <!-- Cards will be added dynamically -->
                    </HBox>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Ante Bet:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="playerTwoAnteBet" promptText="$5 - $25" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Pair Plus Bet:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="playerTwoPairPlusBet" promptText="$5 - $25" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Total Winnings:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="playerTwoWinnings" text="$0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>
                    <Button fx:id="placeBetsButtonPlayerTwo" text="Place Bets" onAction="#handlePlaceBetsPlayerTwo" minWidth="150"/>
                    <Button fx:id="playFoldButtonPlayerTwo" text="Play / Fold" onAction="#handlePlayOrFoldPlayerTwo" minWidth="150"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Control Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" padding="10">
            <Button fx:id="dealCardsButton" text="Deal Cards" onAction="#handleDealCards" minWidth="120"/>
            <Button fx:id="revealDealerButton" text="Reveal Dealer's Hand" onAction="#handleRevealDealerHand" minWidth="180"/>
            <Button fx:id="continueButton" text="Continue" onAction="#handleContinue" minWidth="120"/>
        </HBox>
    </bottom>
</BorderPane>
